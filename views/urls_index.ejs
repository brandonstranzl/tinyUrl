<!DOCTYPE html>
<html lang="en">

<head>
  <title>TinyApp</title>

  <style>

    form.delete {

    display: inline-block;

    }

    header {
      border-bottom: black;
    }

    .shortUrldata {
      font-family: : calibri;
      font-size: 12px;
      color: green;
    }

  header {
    border-bottom: black 20px;
    margin-bottom: 30px;
  }

  </style>

</head>
<body>

  <header>
     <% include ./_header %>
  </header>

<section>
  <h2>Here are my URLs</h2>

  <h3 style="color: red";><em><%= errorMessage %></em><h3>
</section>

<div>
<ul>

  <% userUrls.map(function (url) { %>

      <li><a href="/u/<% url['shorturl'] %>"><%= url['shortUrl'] %></a>: <a href="<% url['longUrl'] %>"><%= url['longUrl'] %></a>
      </li>

        <form class="delete" method="POST" action="/urls/<%= url['shortUrl'] %>/delete">

        <input type="submit" value="Delete">

        </form>

        <a href="/urls/<%= url['shortUrl'] %>">EDIT</a>

      </li>

        <% }) %>

        <li><a href="/urls/new">ADD A NEW URL</a></li>

</ul>
</div>

    <!-- Add your EJS code here -->
</body>
</html>









